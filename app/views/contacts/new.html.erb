<%= form_for contact_path  do  |f|%>
    <%= f.text_field :name, placeholder:'Name *'%>
    <br>
      <%= f.text_field :email, :required => true, placeholder:'Email Address *'%>
    <br>
    <%= f.text_field :phone, placeholder:'Phone Number'%>
    <br>
      <%= f.text_field :subject,:required => true, placeholder:'Subject *'%>
    <br>
      <%= f.text_area :message, :required => true, placeholder:'Message *'%>
    <br>
      <%= f.submit 'Submit'%>
<%end%>
